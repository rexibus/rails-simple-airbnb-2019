

        <%= simple_form_for [@flat] do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :price_per_night %>
          <%= f.input :number_of_guests %>
          <div class="mb-16">
            <%= f.submit "add a flat", class: "btn btn-primary" %>
          </div>
        <% end %>

