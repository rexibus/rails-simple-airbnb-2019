<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.3)), url('<%= @flat.picture_url %>')"></div>


<div class="container margin-top-negative">

  <div class="row">
    <div class="col-8">
      <div class="show-text">
        <div class="card-generic show-text-name">
          <h3><%= @flat.name  %></h3>
          <h4><%= @flat.address  %></h4>
        </div>
        <div class="card-generic show-text-about">
          <h5>A bit more about this flat</h5>
          <p><%= @flat.description %></p>
          <div id="map">
            <img src='https://api.mapbox.com/styles/v1/mapbox/streets-v11/static/2.346,48.8595,11.72,0,0/600x1000?access_token=pk.eyJ1IjoicmV4aWJ1cyIsImEiOiJjanBxM3Vldmgwb3JtNDNvMWQ4YjVsMWtpIn0.zC0oZ5716byaNVOqZhaIgQ'>
          </div>
        </div>
      </div>
    </div>

    <div class="col-4">
      <div class="show-action">
        <div class="card-generic show-action-book">
          <h4>Book this place !</h4>
          <%= render "booking_form" %>
        </div>
        <div class="card-generic show-action-price">
          <h5>Details</h5>
          <div class="flat-card-detail">
            <div class="d-flex">
              <i class="material-icons mr-2">people</i><%= @flat.number_of_guests %>
            </div>
            <div class="d-flex ml-3">
              <i class="material-icons mr-2">euro_symbol</i><%= @flat.price_per_night %>
            </div>
          </div>
        </div>

        <div class="card-generic show-action-share d-flex justify-content-between align-items-center">
          <div><p class="mb-0">Share</p></div>
          <div class="show-action-share-icons d-flex">
            <i class="fab fa-facebook-square mr-2"></i>
            <i class="fab fa-twitter-square mr-2"></i>
            <i class="fab fa-pinterest-square mr-2"></i>
            <i class="fas fa-envelope-square mr-2"></i>
          </div>

        </div>
      </div>

    </div>
  </div>

</div>
