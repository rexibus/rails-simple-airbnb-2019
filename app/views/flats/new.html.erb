<div class="container mt-4">

  <div class="row justify-content-center mt-16">
    <div class="flat-form col-6 m-auto">
      <div>
        <h4>Add a new flat</h4>
      </div>
      <div class="mt-3">
        <%= simple_form_for [@flat] do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :price_per_night %>
          <%= f.input :number_of_guests %>
          <div class="mb-16">
            <%= f.submit "add a flat", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>

